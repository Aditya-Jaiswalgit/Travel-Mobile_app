<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EasyTrip" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">false</item>


        <item name="android:navigationBarColor">@android:color/black</item>

    </style>

    <style name="ShapeAppearanceOverlay.App.circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="CornerImageView5dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="BottomNavTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item> <!-- increase this as needed -->
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>